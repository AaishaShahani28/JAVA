import java.util.*;

class Book {
    int id;
    String title;
    boolean isAvailable;

    Book(int id, String title) {
        this.id = id;
        this.title = title;
        this.isAvailable = true;
    }
}

public class Library {
    static ArrayList<Book> books = new ArrayList<>();

    public static void main(String[] args) {
        books.add(new Book(1, "Java Basics"));
        books.add(new Book(2, "Data Structures"));

        Scanner sc = new Scanner(System.in);
        int choice;
        do {
            System.out.println("\n--- Library Management ---");
            System.out.println("1. View Books");
            System.out.println("2. Borrow Book");
            System.out.println("3. Return Book");
            System.out.println("4. Exit");
            choice = sc.nextInt();

            switch (choice) {
                case 1:
                    for (Book b : books) {
                        System.out.println(b.id + ". " + b.title + " - " + (b.isAvailable ? "Available" : "Borrowed"));
                    }
                    break;

                case 2:
                    System.out.print("Enter Book ID to borrow: ");
                    int borrowId = sc.nextInt();
                    for (Book b : books) {
                        if (b.id == borrowId && b.isAvailable) {
                            b.isAvailable = false;
                            System.out.println("You borrowed " + b.title);
                        }
                    }
                    break;

                case 3:
                    System.out.print("Enter Book ID to return: ");
                    int returnId = sc.nextInt();
                    for (Book b : books) {
                        if (b.id == returnId && !b.isAvailable) {
                            b.isAvailable = true;
                            System.out.println("You returned " + b.title);
                        }
                    }
                    break;
            }
        } while (choice != 4);
        sc.close();
    }
}
